@using DACNPM;
@model DACNPM.Models.TbPhong;

@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
	<div class="content container-fluid">
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title mt-5">Add Phòng</h3>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<form method="post">
					<div class="row formtype">
						<div class="col-md-4">
							<div class="form-group">
								<label asp-for="TenPhong">Tên phòng</label>
								<input type="text" class="form-control mb-3" asp-for="TenPhong" placeholder="">
								<span asp-validation-for="TenPhong" class="alert-danger"></span>
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label asp-for="DonGia">Giá tiền/tháng</label>
								<input type="number" class="form-control mb-3" asp-for="DonGia" placeholder="">
								<span asp-validation-for="DonGia" class="alert-danger"></span>
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label asp-for="SoNguoiMax">Số lượng sinh viên tối đa </label>
								<input type="number" class="form-control mb-3" asp-for="SoNguoiMax" placeholder="">
								<span asp-validation-for="SoNguoiMax" class="alert-danger"></span>
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label asp-for="LoaiPhong">Loại phòng</label>
								<input type="text" class="form-control mb-3" asp-for="LoaiPhong" placeholder="">
								<span asp-validation-for="LoaiPhong" class="alert-danger"></span>
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label asp-for="TrangThai">Trạng thái phòng</label>
								<select class="form-control" asp-for="TrangThai">
									<option value="true">Phòng còn trống</option>
									<option value="false">Phòng đầy</option>
								</select>
								<span asp-validation-for="TrangThai" class="alert-danger"></span>
							</div>
						</div>
						<div class="col-md-4">
							<div class="form-group">
								<label asp-for="MoTa">Mô tả phòng</label>
								<input type="text" class="form-control mb-3" asp-for="MoTa" placeholder="">
								<span asp-validation-for="MoTa" class="alert-danger"></span>
							</div>
						</div>
					</div>
					<button type="submit" class="btn btn-primary buttonedit">Lưu</button>
					<a asp-controller="Phong" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
				</form>
			</div>
		</div>
	</div>
</div>